{
  "compilerOptions": {
  	"target": "es2020",
  	"lib": ["es2020", "dom"],
  	"allowJs": true,
  	"checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types"
  },
  "files": ["src/main.js", "src/platform/web/Platform.js"],
  "disabledCompilerOptions": {
  	"noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  }
}
